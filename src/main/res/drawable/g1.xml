<?xml version="1.0" encoding="utf-8"?>
<rotate android:fromDegrees="0.0"
        android:toDegrees="360.0"
        android:pivotX="50.0%"
        android:pivotY="50.0%"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <shape
        android:shape="ring"
        android:innerRadiusRatio="3.0"
        android:thicknessRatio="20.0"
        android:useLevel="false">
        <gradient
            android:startColor="@color/ge"
            android:endColor="@color/gd"
            android:type="sweep"
            android:centerColor="@color/gc"/>
    </shape>
</rotate>