<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <uk.co.senab.photoview.PhotoView
        android:layout_gravity="center"
        android:id="@id/iv_photo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#cd000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/ju"
            android:id="@id/tv_name"
            android:padding="@dimen/el"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <View
            android:id="@id/view_divide_name"
            android:background="#4dffffff"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="@dimen/el"
            android:layout_marginRight="@dimen/el"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@id/ll_bingo_estimate"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/ju"
                android:id="@id/tv_calory"
                android:background="@null"
                android:paddingLeft="@dimen/el"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/du"
                android:gravity="center"
                android:id="@id/tv_unit"
                android:padding="@dimen/el"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:id="@id/view_divide_estimate"
            android:background="#4dffffff"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="@dimen/el"
            android:layout_marginRight="@dimen/el"/>

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:id="@id/tv_message"
            android:padding="@dimen/el"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <View
            android:id="@id/view_divide_messsage"
            android:background="#4dffffff"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="@dimen/el"
            android:layout_marginRight="@dimen/el"/>

        <RelativeLayout
            android:id="@id/rl_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/a4"
                android:gravity="center"
                android:padding="@dimen/el"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除这条记录"
                android:drawableLeft="@drawable/a9d"
                android:drawablePadding="@dimen/hm"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>