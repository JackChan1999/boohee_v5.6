<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="@color/d5"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/ju"
        android:paddingLeft="@dimen/el"
        android:paddingRight="@dimen/el"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/du"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品总价"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:gravity="right"
            android:id="@id/goods_price"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ll_coupon"
        android:background="@color/ju"
        android:paddingLeft="@dimen/el"
        android:paddingRight="@dimen/el"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/du"
            android:id="@id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:gravity="right"
            android:id="@id/tv_coupon_amount"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ll_bonus"
        android:background="@color/ju"
        android:paddingLeft="@dimen/el"
        android:paddingRight="@dimen/el"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/du"
            android:id="@id/tv_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:gravity="right"
            android:id="@id/tv_bonus_amount"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/carriage_layout"
        android:background="@color/ju"
        android:paddingLeft="@dimen/el"
        android:paddingRight="@dimen/el"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/du"
            android:id="@id/carriage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费（快递）"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:gravity="right"
            android:id="@id/carriage_value"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/ju"
        android:paddingLeft="@dimen/el"
        android:paddingRight="@dimen/el"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/hv"
            android:gravity="right"
            android:id="@id/price_all"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <include layout="@layout/view_order_detail_payments"/>

    <View
        android:background="@color/j8"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="8.0dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/supplement_layout"
        android:background="@color/ju"
        android:paddingLeft="@dimen/el"
        android:paddingTop="8.0dip"
        android:paddingRight="@dimen/el"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/dl"
            android:id="@id/supplement"
            android:background="@color/ju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a7o"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/dl"
            android:id="@id/supplement_value"
            android:background="@color/ju"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"/>
    </LinearLayout>

    <View
        android:background="@color/j8"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginBottom="8.0dip"/>
</LinearLayout>