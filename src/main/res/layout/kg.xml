<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <com.chaowen.commentlibrary.emoji.EmojiconTextView
        android:textSize="@dimen/gy"
        android:textColor="@color/ih"
        android:id="@id/body"
        android:paddingTop="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="回复@张奇：什么"
        android:lineSpacingMultiplier="1.2"/>

    <include
        android:id="@id/origin_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gt"
        layout="@layout/view_notice_body"/>

    <com.boohee.widgets.BooheeRippleLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/gt"
        style="@style/RippleLayout">

        <Button
            android:textSize="@dimen/gy"
            android:textColor="@color/hb"
            android:id="@id/comment_btn"
            android:background="@drawable/ce"
            android:layout_width="60.0dip"
            android:layout_height="32.0dip"
            android:text="回复"
            android:singleLine="true"/>
    </com.boohee.widgets.BooheeRippleLayout>
</LinearLayout>