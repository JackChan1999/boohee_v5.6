<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="@color/ik"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/di"
        android:layout_weight="1.0">

        <EditText
            android:textSize="@dimen/em"
            android:textColor="@color/du"
            android:textColorHint="@color/du"
            android:layout_gravity="center_vertical"
            android:id="@id/et_search"
            android:background="@drawable/h8"
            android:paddingLeft="@dimen/gt"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/a3m"
            android:singleLine="true"
            android:drawableLeft="@drawable/r2"
            android:drawablePadding="@dimen/gt"
            android:layout_centerVertical="true"
            android:imeOptions="actionSearch"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/view_clear"
            android:paddingRight="-12.0dip"
            android:visibility="gone"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:src="@drawable/a2f"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@id/view_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dh"
        android:src="@drawable/a6i"/>
</LinearLayout>