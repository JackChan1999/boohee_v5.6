<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#d2000000"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/btn_close"
        android:padding="@dimen/el"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rk"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@id/video_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80.0dip"
        android:layout_below="@id/btn_close">

        <VideoView
            android:id="@id/video_view"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:layout_marginLeft="@dimen/el"
            android:layout_marginRight="@dimen/el"/>

        <RelativeLayout
            android:id="@id/progress_layout"
            android:background="#d2000000"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:layout_marginLeft="@dimen/el"
            android:layout_marginRight="@dimen/el">

            <com.boohee.widgets.ProgressWheel android:layout_gravity="center"
                                              android:id="@id/progress_bar"
                                              android:layout_width="80.0dip"
                                              android:layout_height="80.0dip"
                                              android:layout_centerInParent="true"
                                              ProgressWheel:textColor="#ff222222"
                                              ProgressWheel:textSize="14.0sp"
                                              ProgressWheel:barColor="#ff339bb9"
                                              ProgressWheel:rimColor="#339e9595"
                                              ProgressWheel:rimWidth="4.0dip"
                                              ProgressWheel:spinSpeed="3.0dip"
                                              ProgressWheel:barWidth="4.0dip"
                                              xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/video_view_layout"
        android:layout_centerInParent="true"/>

    <TextView
        android:textSize="@dimen/em"
        android:textColor="#ff999999"
        android:id="@id/tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/el"
        android:layout_marginBottom="10.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>