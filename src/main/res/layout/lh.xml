<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
              android:padding="10.0dip"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/has_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/a6e"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/avatar_image"
            android:layout_width="@dimen/ek"
            android:layout_height="@dimen/ej"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/aa0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/ih"
                android:ellipsize="end"
                android:id="@id/nickname"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1.0"/>

            <TextView
                android:textColor="@color/ii"
                android:ellipsize="end"
                android:gravity="right"
                android:id="@id/post_time"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="6分钟前"
                android:singleLine="true"
                android:layout_weight="1.0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>