<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="@color/d5"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/em"
        android:textColor="@color/dv"
        android:gravity="center_vertical"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="@string/j7"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/ju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@id/rl_notice_breakfast"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_l"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/hk"
                android:gravity="center_horizontal"
                android:id="@id/txt_notice_breakfast_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <ToggleButton
                android:id="@id/tb_notice_breakfast"
                android:background="@drawable/ig"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"/>

        <RelativeLayout
            android:id="@id/rl_notice_diet"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_o"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/hk"
                android:gravity="center_horizontal"
                android:id="@id/txt_notice_lunch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <ToggleButton
                android:id="@id/tb_notice_lunch"
                android:background="@drawable/ig"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"/>

        <RelativeLayout
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_m"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/hk"
                android:gravity="center_horizontal"
                android:id="@id/txt_notice_supper_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <ToggleButton
                android:id="@id/tb_notice_supper"
                android:background="@drawable/ig"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:textSize="@dimen/em"
        android:textColor="@color/dv"
        android:gravity="center_vertical"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="@string/nh"/>

    <RelativeLayout
        android:id="@id/rl_greedy_water"
        android:background="@color/ju"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/ee"
            android:textColor="@color/e4"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_n"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/ee"
            android:textColor="@color/hk"
            android:gravity="center_horizontal"
            android:id="@id/txt_notice_greedy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ToggleButton
            android:id="@id/tb_notice_greedy"
            android:background="@drawable/ig"
            android:layout_width="80.0dip"
            android:layout_height="40.0dip"
            android:textOn=""
            android:textOff=""
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>