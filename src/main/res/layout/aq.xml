<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="12.0dip"
        android:textColor="@color/dv"
        android:paddingLeft="@dimen/fq"
        android:paddingTop="@dimen/fs"
        android:paddingRight="@dimen/fq"
        android:paddingBottom="@dimen/fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/alreadyCheckLayout"
        android:background="@color/ju"
        android:paddingLeft="@dimen/fq"
        android:paddingTop="@dimen/fs"
        android:paddingRight="@dimen/fq"
        android:paddingBottom="@dimen/fs"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:src="@drawable/a1a"/>

        <TextView
            android:textSize="16.0dip"
            android:textColor="@color/c4"
            android:textColorHint="@color/dv"
            android:gravity="center"
            android:id="@id/checkedAccountText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fq"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="13.0dip"
            android:textColor="@color/ju"
            android:id="@id/changePhoneBtn"
            android:background="#ff4fdf5f"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:layout_width="90.0dip"
            android:layout_height="30.0dip"
            android:text="更换手机号"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/accountLayout"
        android:background="@color/ju"
        android:paddingLeft="@dimen/fq"
        android:paddingTop="@dimen/fs"
        android:paddingRight="@dimen/fq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:src="@drawable/a1a"/>

        <EditText
            android:textSize="16.0dip"
            android:textColor="@color/c4"
            android:textColorHint="@color/dv"
            android:gravity="center_vertical"
            android:id="@id/account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fq"
            android:hint="手机号"
            android:maxLength="11"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/passWordLayout"
        android:background="@color/ju"
        android:paddingLeft="@dimen/fq"
        android:paddingTop="@dimen/fs"
        android:paddingRight="@dimen/fq"
        android:paddingBottom="@dimen/fs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:src="@drawable/a1_"/>

        <EditText
            android:textSize="16.0dip"
            android:textColor="@color/c4"
            android:textColorHint="@color/dv"
            android:gravity="center_vertical"
            android:id="@id/passWord"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fq"
            android:hint="验证码"
            android:singleLine="true"
            android:maxLength="11"
            android:layout_weight="1.0"
            android:inputType="number"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:textSize="13.0dip"
                android:textColor="@color/ju"
                android:id="@id/getAuthCodeBtn"
                android:background="#ff4fdf5f"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_width="90.0dip"
                android:layout_height="30.0dip"
                android:text="获取验证码"/>

            <View
                android:id="@id/maskView"
                android:background="#44000000"
                android:visibility="gone"
                android:layout_width="90.0dip"
                android:layout_height="30.0dip"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/dv"
        android:gravity="center_vertical"
        android:id="@id/tipText"
        android:paddingLeft="@dimen/fq"
        android:paddingRight="@dimen/fq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fq"
        android:layout_marginBottom="@dimen/fq"
        android:text="仅支持中国大陆地区手机号，港澳台及海外用户请使用邮箱。"
        android:lineSpacingMultiplier="1.2"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/gn"
        android:gravity="center"
        android:id="@id/skipTipText"
        android:paddingLeft="@dimen/fq"
        android:paddingRight="@dimen/fq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fq"
        android:layout_marginBottom="@dimen/fq"
        android:text="暂时不想验证？"/>
</LinearLayout>