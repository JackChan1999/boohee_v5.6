<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="@color/ju"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <com.boohee.one.player.ExVideoView
            android:id="@id/video"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"/>

        <ScrollView
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/gy"
                    android:textColor="@color/i5"
                    android:id="@id/use_hint"
                    android:background="@drawable/cu"
                    android:paddingLeft="@dimen/el"
                    android:paddingTop="@dimen/gt"
                    android:paddingRight="@dimen/el"
                    android:paddingBottom="@dimen/gt"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="下载管理里面的运动视频不提供打勾与记录功能哦！日常运动请按照运动课表进行"
                    android:lineSpacingMultiplier="1.3"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:weightSum="2.0">

                    <TextView
                        android:textColor="@color/e4"
                        android:gravity="center"
                        android:id="@id/duration"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"/>

                    <TextView
                        android:textSize="@dimen/em"
                        android:textColor="@color/cw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"/>

                    <TextView
                        android:textColor="@color/e4"
                        android:gravity="center"
                        android:id="@id/calorie"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"/>
                </LinearLayout>

                <View
                    android:background="@color/cw"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/el"
                    android:layout_marginRight="@dimen/el"/>

                <TextView
                    android:textSize="@dimen/em"
                    android:textColor="@color/e4"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/sport_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/el"/>

                <TextView
                    android:textSize="@dimen/fo"
                    android:textColor="@color/e4"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/sport_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/el"/>

                <TextView
                    android:id="@id/sport_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/el"
                    android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/tick_line"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <com.boohee.widgets.BooheeRippleLayout
            android:id="@id/tick_area"
            android:background="@color/i2"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            style="@style/GlobalRippleLayout">

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/hb"
                android:layout_gravity="center"
                android:id="@id/tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成"
                android:drawablePadding="4.0dip"/>
        </com.boohee.widgets.BooheeRippleLayout>

        <com.boohee.widgets.BooheeRippleLayout
            android:id="@id/share_area"
            android:background="@color/hb"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            style="@style/GlobalRippleLayout">

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/ju"
                android:layout_gravity="center"
                android:id="@id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去分享"
                android:drawableLeft="@drawable/a28"
                android:drawablePadding="4.0dip"/>
        </com.boohee.widgets.BooheeRippleLayout>
    </LinearLayout>
</LinearLayout>