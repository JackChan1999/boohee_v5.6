<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:padding="10.0dip"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:layout_gravity="center_vertical"
            android:id="@id/tv_next_mention"
            android:visibility="invisible"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:text="下一组"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/ju"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60.0dip"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/essentials_1_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/el">

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:text="@string/sm"/>

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:id="@id/tv_essentials_1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/essentials_2_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gt">

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:text="@string/sn"/>

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:id="@id/tv_essentials_2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/essentials_3_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gt">

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:text="@string/so"/>

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:id="@id/tv_essentials_3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/common_error_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gt">

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:text="@string/sp"/>

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:id="@id/tv_common_error"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/breath_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gt">

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:text="@string/sk"/>

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center_vertical"
            android:id="@id/tv_breath"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>
</LinearLayout>