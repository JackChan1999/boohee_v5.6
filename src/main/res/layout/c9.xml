<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/cv"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="40.0dip"/>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/ju"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/ju"
                android:padding="@dimen/fq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/a1a"/>

                <EditText
                    android:textSize="16.0dip"
                    android:textColor="@color/c4"
                    android:textColorHint="@color/dv"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:id="@id/accountEdit"
                    android:background="@color/in"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fq"
                    android:hint="手机号"
                    android:singleLine="true"/>
            </LinearLayout>

            <View
                android:background="@color/cv"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="52.0dip"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/passWordLayout"
                android:background="@color/ju"
                android:paddingLeft="@dimen/fq"
                android:paddingRight="@dimen/fq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/a1_"/>

                <EditText
                    android:textSize="16.0dip"
                    android:textColor="@color/c4"
                    android:textColorHint="@color/dv"
                    android:gravity="center_vertical"
                    android:id="@id/passWord"
                    android:background="@color/in"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fq"
                    android:layout_marginTop="@dimen/fq"
                    android:layout_marginBottom="@dimen/fq"
                    android:hint="密码"
                    android:layout_weight="1.0"
                    android:inputType="textPassword"/>

                <com.boohee.widgets.BooheeRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    style="@style/RippleCorner5dp">

                    <Button
                        android:textColor="@color/ju"
                        android:id="@id/bt_captcha"
                        android:background="@drawable/ej"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/u2"/>
                </com.boohee.widgets.BooheeRippleLayout>
            </LinearLayout>

            <View
                android:background="@color/cv"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@id/dealLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/u6"/>

                <TextView
                    android:textColor="@color/hb"
                    android:id="@id/tv_voice_captcha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/u5"/>
            </LinearLayout>

            <TextView
                android:textSize="13.0dip"
                android:textColor="@color/dv"
                android:id="@id/tipsText"
                android:padding="@dimen/fs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/rc"/>
        </LinearLayout>

        <com.boohee.widgets.BooheeRippleLayout
            android:layout_margin="@dimen/fq"
            style="@style/RippleCorner5dp">

            <Button
                android:textSize="16.0dip"
                android:textColor="@color/ju"
                android:gravity="center"
                android:id="@id/loginBtn"
                android:background="@drawable/ej"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/r9"/>
        </com.boohee.widgets.BooheeRippleLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/passwordLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fq">

            <TextView
                android:textSize="13.0dip"
                android:textColor="@color/dv"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"/>

            <TextView
                android:textSize="16.0dip"
                android:textColor="@color/hb"
                android:gravity="center"
                android:id="@id/forgetPwdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:layout_weight="1.0"/>
        </LinearLayout>

        <FrameLayout
            android:id="@id/dividerLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_gravity="center"
                android:background="@color/dv"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"/>

            <TextView
                android:textColor="@color/dv"
                android:layout_gravity="center"
                android:background="@color/d5"
                android:paddingLeft="@dimen/fs"
                android:paddingRight="@dimen/fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或第三方账号登录"/>
        </FrameLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@id/thirdLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fq">

            <TextView
                android:textSize="16.0dip"
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/WeiXinLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adq"
                android:drawableTop="@drawable/tc"
                android:drawablePadding="4.0dip"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="16.0dip"
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/qqLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a13"
                android:drawableTop="@drawable/ta"
                android:drawablePadding="4.0dip"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="16.0dip"
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/weiboLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ad7"
                android:drawableTop="@drawable/tb"
                android:drawablePadding="4.0dip"
                android:layout_weight="1.0"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fs">

            <View
                android:layout_gravity="center"
                android:background="@color/cv"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="@dimen/fq"
                android:layout_marginRight="@dimen/fq"/>

            <TextView
                android:textColor="@color/dv"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/moreLoginBtn"
                android:background="@color/d5"
                android:padding="@dimen/fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多登录方式"/>
        </FrameLayout>

        <TextView
            android:textSize="16.0dip"
            android:textColor="@color/dv"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/leyuLoginBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:layout_marginBottom="@dimen/fq"
            android:text="@string/qi"
            android:drawableTop="@drawable/p4"
            android:drawablePadding="4.0dip"/>

        <com.boohee.myview.SettingItemView
            android:id="@id/clv_change_environment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dh"
            app:siv_top_divider="true"
            app:siv_icon="@drawable/a8p"
            app:siv_title="Change Environment"
            app:siv_bottom_divider="true"
            style="@style/SettingItemRippleLayout"/>
    </LinearLayout>
</ScrollView>