<?xml version="1.0" encoding="utf-8"?>
<com.boohee.widgets.BooheeRippleLayout android:layout_width="fill_parent"
                                       android:layout_height="wrap_content"
                                       style="@style/GlobalRippleLayout"
                                       xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="horizontal"
                  android:background="@color/ju"
                  android:padding="@dimen/dh"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@id/iv_header"
            android:layout_width="46.0dip"
            android:layout_height="46.0dip"/>

        <LinearLayout
            android:gravity="left|center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/di"
            android:layout_weight="1.0">

            <TextView
                android:ellipsize="end"
                android:layout_gravity="top"
                android:id="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"/>

            <TextView
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:id="@id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/di"
                android:lines="1"/>
        </LinearLayout>
    </LinearLayout>
</com.boohee.widgets.BooheeRippleLayout>