<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
              android:background="@color/ju"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <com.boohee.widgets.BooheeRippleLayout
        android:background="@color/ju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        style="@style/RippleLayout">

        <LinearLayout
            android:orientation="vertical"
            android:id="@id/view_goods_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/iv_photo_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:minHeight="150.0dip"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@id/iv_flag_1"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:layout_marginTop="@dimen/el"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="68.0dip">

                <TextView
                    android:textSize="@dimen/ef"
                    android:textColor="@color/e4"
                    android:ellipsize="end"
                    android:gravity="top|left|center"
                    android:id="@id/tv_title_1"
                    android:paddingLeft="@dimen/di"
                    android:paddingTop="6.0dip"
                    android:paddingRight="@dimen/di"
                    android:paddingBottom="6.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/di"
                    android:paddingRight="@dimen/di"
                    android:paddingBottom="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/gy"
                        android:textStyle="bold"
                        android:textColor="@color/gn"
                        android:id="@id/tv_base_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/gy"
                        android:textStyle="bold"
                        android:textColor="@color/da"
                        android:id="@id/tv_market_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.boohee.widgets.BooheeRippleLayout>
</LinearLayout>