<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:id="@id/activity_post_id_card"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/gt"
        android:paddingBottom="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/el"
        android:layout_marginRight="@dimen/el">

        <TextView
            android:textSize="@dimen/dm"
            android:textColor="@color/e4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名："/>

        <EditText
            android:textSize="@dimen/dm"
            android:textColor="@color/e4"
            android:textColorHint="@color/du"
            android:id="@id/edit_name"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gt"
            android:layout_marginRight="@dimen/el"
            android:hint="必填，需与收货姓名一致"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/gt"
        android:paddingBottom="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/el"
        android:layout_marginRight="@dimen/el">

        <TextView
            android:textSize="@dimen/dm"
            android:textColor="@color/e4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号："/>

        <EditText
            android:textSize="@dimen/dm"
            android:textColor="@color/e4"
            android:textColorHint="@color/du"
            android:id="@id/edit_idcard"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gt"
            android:layout_marginRight="@dimen/el"
            android:hint="必填"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <TextView
        android:textSize="@dimen/dm"
        android:textColor="@color/e4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/el"
        android:layout_marginTop="@dimen/gt"
        android:text="上传身份证照片："/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/el"
            android:layout_weight="1.0">

            <ImageView
                android:id="@id/iv_card1"
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:src="@drawable/qv"
                android:scaleType="fitXY"/>

            <TextView
                android:textSize="@dimen/dn"
                android:textColor="@color/e4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gt"
                android:text="身份证正面"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/el"
            android:layout_weight="1.0">

            <ImageView
                android:id="@id/iv_card2"
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:src="@drawable/qv"
                android:scaleType="fitXY"/>

            <TextView
                android:textSize="@dimen/dn"
                android:textColor="@color/e4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gt"
                android:text="身份证反面"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff7f9dd"
        android:padding="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gt"
        android:layout_marginTop="@dimen/el"
        android:layout_marginRight="@dimen/gt">

        <TextView
            android:textSize="@dimen/dn"
            android:textColor="@color/he"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gt"
            android:text="薄荷海外购提醒您填写真实身份证信息"/>

        <include layout="@layout/view_divide_line"/>

        <TextView
            android:textSize="@dimen/dn"
            android:textColor="@color/e4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gt"
            android:layout_marginBottom="20.0dip"
            android:text="1.海外购商品需清关后入境，根据海关要求，需要您填写身份证信息进行个人物品入境申报。\n\n2.因为海关会对您的身份信息进行验证，请确保填写正确，否则商品可能无法正常通关。\n\n3.请放心，您的身份信息将加密报关，绝不会外泄。"/>
    </LinearLayout>
</LinearLayout>