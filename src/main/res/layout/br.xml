<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_gravity="bottom"
        android:id="@id/filterTextLine"
        android:background="@color/h2"
        android:layout_width="fill_parent"
        android:layout_height="4.0dip"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_gravity="center"
            android:id="@id/filterContent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/eatText"
                android:background="@color/ju"
                android:padding="12.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/k0"
                android:layout_weight="1.0"/>

            <TextView
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/sportText"
                android:background="@color/ju"
                android:padding="12.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/a5q"
                android:layout_weight="1.0"/>

            <TextView
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/figureText"
                android:background="@color/ju"
                android:padding="12.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/lp"
                android:layout_weight="1.0"/>

            <TextView
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/sleepText"
                android:background="@color/ju"
                android:padding="12.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/tj"
                android:layout_weight="1.0"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>