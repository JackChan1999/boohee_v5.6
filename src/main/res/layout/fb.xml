<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/view_pop_punch_top"/>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6.0">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="160.0dip"
                android:layout_weight="1.0">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@id/civ_title"
                        android:layout_width="60.0dip"
                        android:layout_height="60.0dip"
                        android:layout_marginTop="@dimen/gt"
                        android:layout_centerInParent="true"/>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@id/ll_light"
                        android:background="@drawable/c1"
                        android:paddingRight="8.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@id/iv_light"
                            android:padding="@dimen/hm"
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"/>

                        <TextView
                            android:textSize="@dimen/ef"
                            android:textColor="@color/du"
                            android:gravity="center"
                            android:id="@id/tv_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:textSize="@dimen/em"
                    android:textColor="@color/e4"
                    android:id="@id/txt_name"
                    android:padding="@dimen/gt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name">

                    <TextView
                        android:textSize="@dimen/em"
                        android:textColor="@color/he"
                        android:id="@id/txt_calory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/gy"
                        android:textColor="@color/e4"
                        android:id="@id/txt_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 千卡/100克 "/>

                    <TextView
                        android:textSize="@dimen/ef"
                        android:textColor="@color/du"
                        android:id="@id/txt_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（可食部分）"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@id/ll_diet_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/ll_estimate"
                    android:background="@drawable/fq"
                    android:padding="@dimen/gt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ImageView
                        android:id="@id/iv_estimate"
                        android:layout_width="25.0dip"
                        android:layout_height="25.0dip"
                        android:src="@drawable/a4f"/>

                    <TextView
                        android:textSize="@dimen/ef"
                        android:textColor="@color/du"
                        android:gravity="center"
                        android:id="@id/tv_estimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/l1"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/ll_collect"
                    android:background="@drawable/fq"
                    android:padding="@dimen/gt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ToggleButton
                        android:id="@id/toggle_collect"
                        android:background="@drawable/f3"
                        android:padding="@dimen/hm"
                        android:clickable="false"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""/>

                    <TextView
                        android:textSize="@dimen/ef"
                        android:textColor="@color/du"
                        android:gravity="center"
                        android:id="@id/tv_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/hm"
                        android:text="未收藏"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/ll_detail"
                    android:background="@drawable/fq"
                    android:padding="@dimen/gt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ImageView
                        android:padding="@dimen/hm"
                        android:layout_width="25.0dip"
                        android:layout_height="25.0dip"
                        android:src="@drawable/f2"/>

                    <TextView
                        android:textSize="@dimen/ef"
                        android:textColor="@color/du"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看详细"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/ju"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.0">

            <include layout="@layout/view_divide_line"/>

            <com.booheee.view.keyboard.DietKeyboard
                android:id="@id/diet_keyboard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>