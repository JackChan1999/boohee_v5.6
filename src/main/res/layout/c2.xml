<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/aa_"
            android:scaleType="centerInside"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dg"
            android:layout_marginBottom="@dimen/dg"
            android:text="拥有小米手环？\n在薄荷里自动同步你的步数吧。"/>

        <Button
            android:id="@id/view_band"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="绑定小米账号"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@id/view_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/hb"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dg"
                android:text="已经绑定小米账号"
                android:drawableLeft="@drawable/a2a"
                android:drawablePadding="@dimen/di"/>

            <TextView
                android:gravity="center_horizontal"
                android:id="@id/view_unband"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dg"
                android:text="我要解绑"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>