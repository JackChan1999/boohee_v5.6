<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:gravity="center"
             android:orientation="vertical"
             android:id="@id/calendar_diamond_cell"
             android:background="@color/ju"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@id/ll_diamond_content"
        android:background="@drawable/e8"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip">

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/e4"
            android:id="@id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@id/weight"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>