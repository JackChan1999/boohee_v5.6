<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@id/crop_aspect_ratio_1_1"
        style="@style/ucrop_WrapperIconState">

        <com.yalantis.ucrop.view.widget.AspectRatioTextView
            app:ucrop_artv_ratio_x="1.0"
            app:ucrop_artv_ratio_y="1.0"
            style="@style/ucrop_TextViewCropAspectRatio"/>
    </FrameLayout>

    <FrameLayout
        android:id="@id/crop_aspect_ratio_3_4"
        style="@style/ucrop_WrapperIconState">

        <com.yalantis.ucrop.view.widget.AspectRatioTextView
            app:ucrop_artv_ratio_x="4.0"
            app:ucrop_artv_ratio_y="3.0"
            style="@style/ucrop_TextViewCropAspectRatio"/>
    </FrameLayout>

    <FrameLayout
        android:id="@id/crop_aspect_ratio_original"
        style="@style/ucrop_WrapperIconState">

        <com.yalantis.ucrop.view.widget.AspectRatioTextView
            android:textAllCaps="true"
            app:ucrop_artv_ratio_title="@string/aab"
            style="@style/ucrop_TextViewCropAspectRatio"/>
    </FrameLayout>

    <FrameLayout
        android:id="@id/crop_aspect_ratio_3_2"
        style="@style/ucrop_WrapperIconState">

        <com.yalantis.ucrop.view.widget.AspectRatioTextView
            app:ucrop_artv_ratio_x="3.0"
            app:ucrop_artv_ratio_y="2.0"
            style="@style/ucrop_TextViewCropAspectRatio"/>
    </FrameLayout>

    <FrameLayout
        android:id="@id/crop_aspect_ratio_16_9"
        style="@style/ucrop_WrapperIconState">

        <com.yalantis.ucrop.view.widget.AspectRatioTextView
            app:ucrop_artv_ratio_x="16.0"
            app:ucrop_artv_ratio_y="9.0"
            style="@style/ucrop_TextViewCropAspectRatio"/>
    </FrameLayout>
</LinearLayout>