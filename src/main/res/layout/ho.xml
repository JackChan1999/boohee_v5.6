<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="#fff8f8f8"
              android:paddingLeft="@dimen/dh"
              android:paddingTop="@dimen/di"
              android:paddingRight="@dimen/dh"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/a0y"
        android:layout_width="fill_parent"
        android:layout_height="125.0dip">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dh"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="12.0sp"
                    android:textColor="#ffff8800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"/>

                <TextView
                    android:textSize="36.0sp"
                    android:textColor="#ffff8800"
                    android:id="@id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_centerInParent="true"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dh"
                android:layout_weight="2.0">

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ffff8800"
                    android:id="@id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="12.0sp"
                    android:textColor="#ff999999"
                    android:id="@id/tv_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/di"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dh"
            android:layout_marginTop="@dimen/di"
            android:layout_marginRight="@dimen/dh"
            android:layout_marginBottom="@dimen/di"
            android:layout_alignParentBottom="true">

            <TextView
                android:textSize="12.0sp"
                android:textColor="#ff333333"
                android:id="@id/tv_limit_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <CheckBox
                android:textSize="12.0sp"
                android:textColor="#ff333333"
                android:id="@id/view_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:button="@null"
                android:text="使用规则"
                android:drawableRight="@drawable/hb"
                android:drawablePadding="4.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:textSize="12.0sp"
        android:textColor="#ff999999"
        android:id="@id/tv_description"
        android:background="@drawable/a0x"
        android:padding="16.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="#ffff8800"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"/>
</LinearLayout>