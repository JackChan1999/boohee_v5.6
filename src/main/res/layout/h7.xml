<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="@color/ju"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@id/rl_header"
        android:paddingTop="@dimen/gt"
        android:paddingRight="@dimen/gt"
        android:paddingBottom="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/iv_avatar"
            android:layout_width="@dimen/ho"
            android:layout_height="@dimen/ho"
            android:layout_marginLeft="@dimen/el"
            android:layout_marginTop="@dimen/gt"
            android:layout_marginRight="@dimen/gt"
            android:layout_marginBottom="@dimen/gt"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ripple"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_centerVertical="true">

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/c4"
                android:id="@id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/dv"
                android:ellipsize="end"
                android:id="@id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:lines="2"/>
        </LinearLayout>

        <com.boohee.widgets.BooheeRippleLayout
            android:id="@id/ripple"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/gt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/RippleLayout">

            <ToggleButton
                android:textColor="@color/ju"
                android:gravity="center"
                android:id="@id/tb_follow"
                android:background="@drawable/ed"
                android:paddingLeft="20.0dip"
                android:layout_width="80.0dip"
                android:layout_height="36.0dip"
                android:checked="false"
                android:textOn="已关注"
                android:textOff="关注"/>
        </com.boohee.widgets.BooheeRippleLayout>
    </RelativeLayout>

    <View
        android:background="@color/cx"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="@dimen/el"/>

    <TableLayout
        android:orientation="vertical"
        android:background="@color/ju"
        android:paddingLeft="@dimen/el"
        android:paddingTop="@dimen/gt"
        android:paddingRight="@dimen/el"
        android:paddingBottom="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/e4"
                android:gravity="center"
                android:id="@id/tv_post_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/e4"
                android:gravity="center"
                android:id="@id/tv_diamond_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/e4"
                android:gravity="center"
                android:id="@id/tv_friends_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/e4"
                android:gravity="center"
                android:id="@id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/tv_post_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/tv_diamond_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钻石"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/tv_friends_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:layout_weight="1.0"/>

            <TextView
                android:textSize="@dimen/gy"
                android:textColor="@color/dv"
                android:gravity="center"
                android:id="@id/tv_fans_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:layout_weight="1.0"/>
        </TableRow>
    </TableLayout>

    <include layout="@layout/view_divide_line"/>
</LinearLayout>