<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/dn"
        android:textColor="@color/dv"
        android:padding="@dimen/fs"
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_marginTop="40.0dip"
        android:text="请输入你注册时填写的手机号"/>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/ju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/ju"
            android:padding="@dimen/fq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/a1a"/>

            <EditText
                android:textSize="16.0dip"
                android:textColor="@color/c4"
                android:textColorHint="@color/dv"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@id/accountEdit"
                android:background="@color/in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fq"
                android:hint="手机号"
                android:singleLine="true"/>
        </LinearLayout>

        <View
            android:background="@color/cv"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="52.0dip"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/ju"
            android:padding="@dimen/fq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/a1_"/>

            <EditText
                android:textSize="16.0dip"
                android:textColor="@color/c4"
                android:textColorHint="@color/dv"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@id/tv_password"
                android:background="@color/in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fq"
                android:hint="新密码6-32位"
                android:singleLine="true"
                android:inputType="textPassword"/>
        </LinearLayout>

        <View
            android:background="@color/cv"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="52.0dip"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/ju"
            android:paddingLeft="@dimen/fq"
            android:paddingRight="@dimen/fq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/a1_"/>

            <EditText
                android:textSize="16.0dip"
                android:textColor="@color/c4"
                android:textColorHint="@color/dv"
                android:gravity="center_vertical"
                android:id="@id/tv_captcha"
                android:background="@color/in"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fq"
                android:layout_marginTop="@dimen/fq"
                android:layout_marginBottom="@dimen/fq"
                android:hint="验证码"
                android:layout_weight="1.0"
                android:inputType="number"/>

            <Button
                android:textColor="@color/ju"
                android:id="@id/bt_captcha"
                android:background="@drawable/dk"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="@string/u2"/>
        </LinearLayout>

        <View
            android:background="@color/cv"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/u6"/>

            <TextView
                android:textColor="@color/bu"
                android:id="@id/tv_voice_captcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/u5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>