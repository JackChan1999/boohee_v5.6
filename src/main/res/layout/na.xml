<?xml version="1.0" encoding="utf-8"?>
<com.boohee.myview.CustomInsetLayout android:orientation="vertical"
                                     android:fitsSystemWindows="true"
                                     android:layout_width="fill_parent"
                                     android:layout_height="fill_parent"
                                     xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/real_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/a1k"
            android:layout_weight="3.0"/>

        <EditText
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/real_name_value"
            android:background="@null"
            android:padding="@dimen/gt"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:hint="@string/a2d"
            android:layout_weight="7.0"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:padding="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/phone_num"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/zc"
            android:layout_weight="3.0"/>

        <EditText
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/phone_num_value"
            android:background="@null"
            android:padding="@dimen/gt"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:hint="@string/a2d"
            android:layout_weight="7.0"
            android:inputType="phone"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:padding="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/a0d"
            android:layout_weight="3.0"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/txt_address_regions"
            android:background="@null"
            android:padding="@dimen/gt"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:hint="@string/a2d"
            android:layout_weight="7.0"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:padding="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/address_details"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/bc"
            android:layout_weight="3.0"/>

        <EditText
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/address_details_value"
            android:background="@null"
            android:padding="@dimen/gt"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:hint="@string/a2d"
            android:layout_weight="7.0"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>

    <LinearLayout
        android:padding="@dimen/gt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/post_code"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/zw"
            android:layout_weight="3.0"/>

        <EditText
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/post_code_value"
            android:background="@null"
            android:padding="@dimen/gt"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:hint="@string/y1"
            android:layout_weight="7.0"
            android:inputType="number"/>
    </LinearLayout>

    <include layout="@layout/view_divide_line"/>
</com.boohee.myview.CustomInsetLayout>