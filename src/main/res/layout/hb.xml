<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="@color/ju"
              android:focusableInTouchMode="true"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/em"
        android:textStyle="bold"
        android:textColor="@color/e4"
        android:background="@color/d5"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/a40"
        android:singleLine="true"/>

    <TextView
        android:textSize="@dimen/em"
        android:textStyle="bold"
        android:textColor="@color/e4"
        android:id="@id/txt_none_recent"
        android:background="@color/ju"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/xz"
        android:singleLine="true"/>

    <ListView
        android:id="@id/lv_recent_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/ListViewStyleNoDivider"/>

    <TextView
        android:textSize="@dimen/em"
        android:textStyle="bold"
        android:textColor="@color/e4"
        android:background="@color/d5"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:singleLine="true"/>

    <ListView
        android:id="@id/lv_hot_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/ListViewStyleNoDivider"/>
</LinearLayout>