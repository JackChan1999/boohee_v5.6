<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.boohee.widgets.BooheeRippleLayout style="@style/RippleLayout">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/ll_check_in"
                android:background="@color/ju"
                android:layout_width="fill_parent"
                android:layout_height="70.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/el"
                    android:layout_marginTop="@dimen/gt"
                    android:layout_marginRight="@dimen/gt"
                    android:layout_marginBottom="@dimen/gt"
                    android:src="@drawable/a2k"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="8.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <TextView
                        android:textSize="@dimen/em"
                        android:textColor="@color/e4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的钻石数"/>

                    <TextView
                        android:textSize="@dimen/gy"
                        android:textColor="@color/he"
                        android:id="@id/tv_diamond_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <com.boohee.widgets.BooheeRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/gt"
                    style="@style/RippleLayout">

                    <Button
                        android:textSize="@dimen/gy"
                        android:textColor="@color/ju"
                        android:id="@id/btn_go_exchange"
                        android:background="@drawable/ej"
                        android:paddingLeft="@dimen/el"
                        android:paddingTop="@dimen/gt"
                        android:paddingRight="@dimen/el"
                        android:paddingBottom="@dimen/gt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0.0dip"
                        android:minHeight="0.0dip"
                        android:text="@string/j0"/>
                </com.boohee.widgets.BooheeRippleLayout>
            </LinearLayout>
        </com.boohee.widgets.BooheeRippleLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/ju"
            android:paddingTop="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/hk"
                android:layout_width="3.0dip"
                android:layout_height="18.0dip"
                android:layout_marginLeft="10.0dip"/>

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/e4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="@string/j3"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/ju"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0">

                <RelativeLayout
                    android:id="@id/rl_top_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:textSize="26.0sp"
                        android:textColor="@color/hk"
                        android:id="@id/tv_continue_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/dl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:text="天"
                        android:layout_toRightOf="@id/tv_continue_day"
                        android:layout_alignBaseline="@id/tv_continue_day"/>
                </RelativeLayout>

                <View
                    android:id="@id/divider_one"
                    android:background="@color/cx"
                    android:layout_width="120.0dip"
                    android:layout_height="1.0px"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginBottom="7.0dip"
                    android:layout_below="@id/rl_top_one"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:textSize="@dimen/dl"
                    android:textColor="@color/du"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/ix"
                    android:layout_below="@id/divider_one"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0">

                <RelativeLayout
                    android:id="@id/rl_top_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:textSize="26.0sp"
                        android:textColor="@color/hk"
                        android:id="@id/tv_all_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/dl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:text="次"
                        android:layout_toRightOf="@id/tv_all_day"
                        android:layout_alignBaseline="@id/tv_all_day"/>
                </RelativeLayout>

                <View
                    android:id="@id/divider_two"
                    android:background="@color/cx"
                    android:layout_width="120.0dip"
                    android:layout_height="1.0px"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginBottom="7.0dip"
                    android:layout_below="@id/rl_top_two"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:textSize="@dimen/dl"
                    android:textColor="@color/du"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/iw"
                    android:layout_below="@id/divider_two"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/view_calendar"/>

        <com.boohee.widgets.BooheeRippleLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/el"
            style="@style/RippleLayout">

            <Button
                android:enabled="false"
                android:textSize="@dimen/em"
                android:textColor="@color/ju"
                android:id="@id/btn_repair"
                android:background="@drawable/ej"
                android:paddingLeft="@dimen/el"
                android:paddingTop="@dimen/gt"
                android:paddingRight="@dimen/el"
                android:paddingBottom="@dimen/gt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:text="我要补打卡"/>
        </com.boohee.widgets.BooheeRippleLayout>

        <TextView
            android:textColor="@color/dv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:text="可补打卡最近7天,每次扣3000颗钻石"/>

        <include layout="@layout/view_diamond_message"/>
    </LinearLayout>
</ScrollView>