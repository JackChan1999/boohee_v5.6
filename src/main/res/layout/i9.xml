<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:id="@id/item_mention_layout"
              android:padding="@dimen/gt"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center"
        android:id="@id/iv_mention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="@dimen/gy"
        android:textColor="@color/e4"
        android:layout_gravity="center_horizontal"
        android:id="@id/tv_mention_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="@dimen/gy"
        android:textColor="@color/du"
        android:layout_gravity="center_horizontal"
        android:id="@id/tv_mention_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>