<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
              android:padding="@dimen/h1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@id/iv"
        android:layout_width="130.0dip"
        android:layout_height="85.0dip"
        android:layout_marginRight="@dimen/h1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:gravity="center_vertical"
            android:id="@id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:maxLines="2"
            android:layout_weight="1.0"
            android:layout_alignParentTop="true"/>

        <TextView
            android:textSize="@dimen/dl"
            android:textColor="@color/du"
            android:gravity="center_vertical"
            android:id="@id/tv_tags"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="@dimen/el"
            android:maxLines="2"
            android:drawableLeft="@drawable/a7z"
            android:layout_weight="1.0"/>
    </LinearLayout>
</LinearLayout>