<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:id="@id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/view_divide"/>

    <View
        android:id="@id/view_divide"
        android:background="@color/cv"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/view_tabs"/>

    <android.support.design.widget.TabLayout
        android:id="@id/view_tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:tabIndicatorColor="@color/hb"
        app:tabIndicatorHeight="1.0dip"
        app:tabBackground="@color/ju"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/da"
        app:tabSelectedTextColor="@color/hb"/>
</RelativeLayout>