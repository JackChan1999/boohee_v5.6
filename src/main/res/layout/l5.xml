<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
              android:background="@drawable/gc"
              android:padding="@dimen/fz"
              style="@style/MQMatchWrap.Horizontal"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <com.meiqia.meiqiasdk.widget.MQImageView
        android:id="@id/photo_iv"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginRight="@dimen/fz"
        android:src="@drawable/ac6"
        android:scaleType="centerCrop"/>

    <LinearLayout style="@style/MQMatchWrap.Vertical">

        <TextView
            android:textSize="@dimen/g8"
            android:textColor="#ff747b83"
            android:id="@id/name_tv"
            android:singleLine="true"
            style="@style/MQMatchWrap"/>

        <TextView
            android:textSize="@dimen/g7"
            android:textColor="#ff747b83"
            android:id="@id/count_tv"
            android:layout_marginTop="@dimen/fz"
            android:singleLine="true"
            style="@style/MQMatchWrap"/>
    </LinearLayout>
</LinearLayout>