<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="center"
                android:padding="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="23.0sp"
        android:textColor="@color/ju"
        android:id="@id/upLeftText"
        android:paddingLeft="5.0dip"
        android:paddingTop="11.0dip"
        android:paddingRight="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跑步"
        style="@style/EditTextShadow"/>

    <EditText
        android:textSize="35.0sp"
        android:textColor="@color/ju"
        android:id="@id/upMiddleText"
        android:background="@color/in"
        android:padding="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:maxLength="3"
        android:layout_toRightOf="@id/upLeftText"
        android:layout_alignParentTop="true"
        android:inputType="number"
        android:textCursorDrawable="@color/ju"
        style="@style/EditTextShadow"/>

    <TextView
        android:textSize="20.0sp"
        android:textColor="@color/ju"
        android:id="@id/upRightText"
        android:padding="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/u1"
        android:maxLength="3"
        android:layout_toRightOf="@id/upMiddleText"
        android:layout_alignParentTop="true"
        style="@style/EditTextShadow"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/ju"
        android:id="@id/bottomText"
        android:padding="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消耗 0 千卡 "
        android:layout_below="@id/upMiddleText"
        style="@style/EditTextShadow"/>
</RelativeLayout>