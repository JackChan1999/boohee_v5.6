<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/el"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/dm"
            android:textColor="@color/e4"
            android:id="@id/tv_light_introduce_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/qx"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ed">

            <ImageView
                android:id="@id/iv_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/el"
                android:src="@drawable/sh"/>

            <TextView
                android:id="@id/tv_green"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_green"/>

            <ImageView
                android:id="@id/iv_green_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gt"
                android:src="@drawable/se"
                android:layout_toRightOf="@id/iv_green"
                android:layout_below="@id/tv_green"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ed">

            <ImageView
                android:id="@id/iv_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/el"
                android:src="@drawable/sj"/>

            <TextView
                android:id="@id/tv_yellow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_yellow"/>

            <ImageView
                android:id="@id/iv_yellow_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gt"
                android:src="@drawable/sg"
                android:layout_toRightOf="@id/iv_yellow"
                android:layout_below="@id/tv_yellow"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ed">

            <ImageView
                android:id="@id/iv_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/el"
                android:src="@drawable/si"/>

            <TextView
                android:id="@id/tv_red"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_red"/>

            <ImageView
                android:id="@id/iv_red_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gt"
                android:src="@drawable/sf"
                android:layout_toRightOf="@id/iv_red"
                android:layout_below="@id/tv_red"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>