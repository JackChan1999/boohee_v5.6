<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_gravity="center"
             android:background="@drawable/op"
             android:padding="22.0dip"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@id/figureLayout"
        android:padding="3.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22.0dip">

        <TextView
            android:textSize="20.0sp"
            android:textColor="@color/ju"
            android:id="@id/upLeftText"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:text="胸围"/>

        <EditText
            android:textSize="20.0sp"
            android:textColor="@color/ju"
            android:id="@id/upMiddleText"
            android:background="@color/in"
            android:padding="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="8.0dip"
            android:maxLength="3"
            android:inputType="number"
            android:textCursorDrawable="@color/ju">

            <requestFocus/>
        </EditText>

        <TextView
            android:textSize="20.0sp"
            android:textColor="@color/ju"
            android:id="@id/upRightText"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"/>
    </LinearLayout>

    <Button
        android:layout_gravity="top|right|center"
        android:id="@id/editBtn"
        android:background="@drawable/od"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"/>

    <Button
        android:layout_gravity="bottom|right|center"
        android:id="@id/removeBtn"
        android:background="@drawable/vf"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"/>
</FrameLayout>