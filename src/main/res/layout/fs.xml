<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <FrameLayout
            android:layout_gravity="center"
            android:id="@id/filter_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d9">

            <ImageView
                android:layout_gravity="center"
                android:id="@id/filterImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <include
                android:layout_gravity="bottom|left|center"
                android:id="@id/markView"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginBottom="15.0dip"
                layout="@layout/view_filter_sport"/>
        </FrameLayout>
    </LinearLayout>

    <com.boohee.widgets.HorizontalListView
        android:layout_gravity="bottom"
        android:id="@id/filterIconListView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/e5"
        android:divider="@color/in"/>
</LinearLayout>