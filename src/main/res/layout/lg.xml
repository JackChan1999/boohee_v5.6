<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <com.boohee.myview.ViewPagerFixed
        android:id="@id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:background="#b1000000"
        android:padding="@dimen/dw"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/ju"
            android:id="@id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textSize="@dimen/dn"
            android:textColor="@color/ju"
            android:id="@id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_weight"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="24.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dv"
        android:layout_marginRight="@dimen/dv"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@id/bt_downlaod"
            android:background="@drawable/a35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dv"
            android:layout_toLeftOf="@id/bt_delete"/>

        <ImageButton
            android:id="@id/bt_delete"
            android:background="@drawable/a9e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dv"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>