<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="10.0dip"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/avatar_image"
        android:layout_width="@dimen/ek"
        android:layout_height="@dimen/ej"/>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户姓名"
            android:singleLine="true"/>

        <TextView
            android:textSize="@dimen/gy"
            android:textColor="@color/du"
            android:id="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山东潍坊，BMI..."/>
    </LinearLayout>

    <com.boohee.widgets.BooheeRippleLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="10.0dip"
        style="@style/RippleLayout">

        <ToggleButton
            android:textSize="@dimen/gy"
            android:textColor="@color/ju"
            android:gravity="center"
            android:id="@id/following_btn"
            android:background="@drawable/ed"
            android:paddingLeft="20.0dip"
            android:layout_width="80.0dip"
            android:layout_height="36.0dip"
            android:textOn="@string/bm"
            android:textOff="@string/m9"/>
    </com.boohee.widgets.BooheeRippleLayout>
</LinearLayout>