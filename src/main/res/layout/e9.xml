<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/ju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/ee"
            android:textColor="@color/dv"
            android:gravity="center_vertical"
            android:background="@color/d5"
            android:paddingLeft="10.0dip"
            android:paddingTop="20.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dj"/>

        <RelativeLayout
            android:id="@id/rl_notice_good_morning"
            android:background="@drawable/fq"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:id="@id/txt_notice_good_morning_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/na"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/dv"
                android:ellipsize="end"
                android:gravity="left|center"
                android:id="@id/txt_notice_good_morning_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100.0dip"
                android:text="@string/ft"
                android:singleLine="true"
                android:layout_below="@id/txt_notice_good_morning_title"
                android:layout_alignLeft="@id/txt_notice_good_morning_title"
                android:layout_alignParentLeft="true"/>

            <ToggleButton
                android:id="@id/tb_notice_good_morning"
                android:background="@drawable/ig"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"/>
        </RelativeLayout>

        <View
            android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"/>

        <RelativeLayout
            android:id="@id/rl_notice_diet"
            android:background="@drawable/fq"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:id="@id/txt_notice_diet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/j8"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/dv"
                android:ellipsize="end"
                android:gravity="left|center"
                android:id="@id/txt_notice_diet_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100.0dip"
                android:text="@string/ft"
                android:singleLine="true"
                android:layout_below="@id/txt_notice_diet_title"
                android:layout_alignLeft="@id/txt_notice_diet_title"
                android:layout_alignParentLeft="true"/>

            <ToggleButton
                android:id="@id/tb_notice_diet"
                android:background="@drawable/ig"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"/>
        </RelativeLayout>

        <View
            android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"/>

        <RelativeLayout
            android:id="@id/rl_notice_sport"
            android:background="@drawable/fq"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:id="@id/txt_notice_sport_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a67"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/dv"
                android:ellipsize="end"
                android:gravity="left|center"
                android:id="@id/txt_notice_sport_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100.0dip"
                android:text="@string/ft"
                android:singleLine="true"
                android:layout_below="@id/txt_notice_sport_title"
                android:layout_alignLeft="@id/txt_notice_sport_title"
                android:layout_alignParentLeft="true"/>

            <ToggleButton
                android:id="@id/tb_notice_sport"
                android:background="@drawable/ig"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"/>
        </RelativeLayout>

        <View
            android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"/>

        <RelativeLayout
            android:id="@id/rl_notice_water"
            android:background="@drawable/fq"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:id="@id/txt_notice_water_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acy"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/dv"
                android:ellipsize="end"
                android:gravity="left|center"
                android:id="@id/txt_notice_water_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100.0dip"
                android:text="@string/ft"
                android:singleLine="true"
                android:layout_below="@id/txt_notice_water_title"
                android:layout_alignLeft="@id/txt_notice_water_title"
                android:layout_alignParentLeft="true"/>

            <ToggleButton
                android:id="@id/tb_notice_water"
                android:background="@drawable/ig"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:textOn=""
                android:textOff=""
                android:layout_toLeftOf="@id/txt_notice_water_sub_title"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"/>
        </RelativeLayout>

        <View
            android:background="@color/d5"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/ju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip">

        <RelativeLayout
            android:id="@id/rl_notice_box"
            android:background="@drawable/fq"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick">

            <TextView
                android:textSize="@dimen/ee"
                android:textColor="@color/e4"
                android:gravity="center_vertical"
                android:id="@id/txt_notice_box_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dn"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:textSize="@dimen/em"
                android:textColor="@color/dv"
                android:ellipsize="end"
                android:gravity="left|center"
                android:id="@id/txt_notice_box_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100.0dip"
                android:text="@string/do"
                android:singleLine="true"
                android:layout_below="@id/txt_notice_box_title"
                android:layout_alignLeft="@id/txt_notice_box_title"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:textColor="@color/ju"
                android:gravity="center"
                android:id="@id/txt_notice_box_count"
                android:background="@drawable/so"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>