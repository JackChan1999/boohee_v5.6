<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="#64232323"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/cw"
        android:padding="16.0dip"
        android:layout_width="280.0dip"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20.0dip"
            android:textColor="@color/e4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现新版本"/>

        <TextView
            android:textColor="@color/du"
            android:id="@id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"/>

        <TextView
            android:textColor="@color/du"
            android:id="@id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:minLines="3"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:weightSum="2.0">

            <com.boohee.widgets.BooheeRippleLayout
                android:layout_width="0.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                style="@style/RippleLayout">

                <TextView
                    android:textSize="16.0dip"
                    android:textColor="@color/hb"
                    android:gravity="center"
                    android:id="@id/tv_cancel"
                    android:background="@drawable/ca"
                    android:layout_width="fill_parent"
                    android:layout_height="36.0dip"
                    android:text="取消"/>
            </com.boohee.widgets.BooheeRippleLayout>

            <com.boohee.widgets.BooheeRippleLayout
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                style="@style/RippleLayout">

                <TextView
                    android:textSize="16.0dip"
                    android:textColor="@color/ju"
                    android:gravity="center"
                    android:id="@id/tv_update"
                    android:background="@drawable/ej"
                    android:layout_width="fill_parent"
                    android:layout_height="36.0dip"/>
            </com.boohee.widgets.BooheeRippleLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>