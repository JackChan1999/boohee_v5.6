<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="@color/ju"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="12.0sp"
        android:gravity="center_horizontal"
        android:id="@id/tv_step_alert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dh"
        android:text="总累计步数"/>

    <com.boohee.one.pedometer.v2.view.NumberView
        android:textSize="36.0sp"
        android:textColor="@color/i7"
        android:gravity="center_horizontal"
        android:id="@id/tv_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/di"
        android:layout_marginBottom="@dimen/dh"/>

    <View
        android:background="@color/i9"
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"/>
</LinearLayout>