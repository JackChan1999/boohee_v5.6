<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/ju"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="47.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip">

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/hb"
            android:layout_width="3.0dip"
            android:layout_height="18.0dip"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:layout_gravity="center_vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:text="@string/j2"
            android:layout_weight="1.0"/>

        <com.boohee.widgets.AnimCheckBox
            android:layout_gravity="center_vertical"
            android:id="@id/check_box"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            app:stroke_width="1.0dip"
            app:stroke_color="@color/hb"
            app:circle_color="@color/ju"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/dv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginBottom="15.0dip"
            android:text="每天中午12点之前没有打卡，会收到消息提醒"/>
    </LinearLayout>
</LinearLayout>