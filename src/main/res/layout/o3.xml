<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/eo"
        android:textColor="@color/ax"
        android:gravity="center"
        android:id="@id/user_property_text"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:text="@string/a7x"
        android:layout_weight="1.0"/>

    <RadioGroup
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@id/choose_group"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip">

        <RadioButton
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:gravity="bottom|center"
            android:id="@id/lose_weight"
            android:background="@drawable/fr"
            android:padding="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="@color/in"
            android:text="@string/rh"
            android:layout_weight="1.0"/>

        <RadioButton
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:gravity="bottom|center"
            android:id="@id/keep_weight"
            android:background="@drawable/fo"
            android:padding="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:button="@color/in"
            android:text="@string/px"
            android:layout_weight="1.0"/>
    </RadioGroup>
</LinearLayout>