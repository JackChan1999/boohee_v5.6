<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="28.0dip"
                android:layout_marginRight="12.0dip">

                <ImageView
                    android:id="@id/iv_goods"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/a9p"/>

                <TextView
                    android:textColor="@color/e4"
                    android:id="@id/tv_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:text="退款商品"
                    android:layout_toRightOf="@id/iv_goods"/>

                <TextView
                    android:textColor="@color/du"
                    android:id="@id/tv_goods"
                    android:background="@color/ju"
                    android:padding="12.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_below="@id/iv_goods"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="28.0dip"
                android:layout_marginRight="12.0dip">

                <ImageView
                    android:id="@id/iv_price"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/a9q"/>

                <TextView
                    android:textColor="@color/e4"
                    android:id="@id/tv_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:text="退款金额"
                    android:layout_toRightOf="@id/iv_price"/>

                <TextView
                    android:textColor="@color/du"
                    android:id="@id/tv_price"
                    android:background="@color/ju"
                    android:padding="12.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_below="@id/iv_price"/>
            </RelativeLayout>

            <include layout="@layout/rl_refund_account"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="28.0dip"
                android:layout_marginRight="12.0dip">

                <ImageView
                    android:id="@id/iv_reason"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/a9s"/>

                <TextView
                    android:textColor="@color/e4"
                    android:id="@id/tv_reason_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:text="退款原因"
                    android:layout_toRightOf="@id/iv_reason"/>

                <EditText
                    android:textSize="@dimen/dd"
                    android:textColor="@color/du"
                    android:textColorHint="@color/hz"
                    android:id="@id/et_reason"
                    android:background="@color/ju"
                    android:padding="12.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:hint="请输入您的申请原因"
                    android:maxLines="5"
                    android:maxLength="100"
                    android:layout_below="@id/iv_reason"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.boohee.widgets.BooheeRippleLayout
        android:background="@color/hb"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        style="@style/RippleLayout">

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/ju"
            android:gravity="center"
            android:id="@id/tv_commit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="提交申请"/>
    </com.boohee.widgets.BooheeRippleLayout>
</LinearLayout>