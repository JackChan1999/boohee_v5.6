<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/d5"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/gc"
        android:textColor="@color/e4"
        android:id="@id/attribute_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="昵称"/>

    <EditText
        android:textSize="@dimen/em"
        android:gravity="top|left|center"
        android:id="@id/content"
        android:background="@drawable/mi"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        android:lines="1"/>

    <TextView
        android:textColor="@color/dv"
        android:id="@id/word_number_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:text="不超过20个字哦~"/>
</LinearLayout>