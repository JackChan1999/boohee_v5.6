<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:paddingTop="8.0dip"
              android:paddingBottom="8.0dip"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/ju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.boohee.widgets.CircularImage
            android:id="@id/iv_user_avatar"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_margin="8.0dip"
            android:src="@color/h6"/>

        <TextView
            android:textSize="@dimen/em"
            android:textColor="@color/e4"
            android:id="@id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/image_layout"
        android:background="@color/ju"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100.0dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/ju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/dv"
            android:gravity="center"
            android:id="@id/tv_joiner_count"
            android:padding="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:drawableLeft="@drawable/w6"/>

        <TextView
            android:textColor="@color/dv"
            android:gravity="center"
            android:id="@id/tv_posts_count"
            android:padding="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="133"
            android:drawableLeft="@drawable/w7"/>

        <TextView
            android:textColor="@color/dv"
            android:gravity="center"
            android:id="@id/tv_tags_count"
            android:padding="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="124"
            android:drawableLeft="@drawable/w8"/>
    </LinearLayout>
</LinearLayout>