<?xml version="1.0" encoding="utf-8"?>
<com.boohee.widgets.BooheeRippleLayout android:id="@id/ripple"
                                       android:layout_width="fill_parent"
                                       android:layout_height="wrap_content"
                                       app:mrl_rippleColor="@color/hm"
                                       app:mrl_rippleOverlay="@bool/p"
                                       app:mrl_rippleAlpha="0.2"
                                       app:mrl_rippleHover="@bool/o"
                                       app:mrl_rippleDelayClick="@bool/n"
                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@id/main_group_item_layout"
            android:paddingLeft="@dimen/el"
            android:paddingRight="@dimen/el"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:paddingStart="@dimen/el"
            android:paddingEnd="@dimen/el">

            <com.joooonho.SelectableRoundedImageView
                android:id="@id/main_group_iv"
                android:layout_width="@dimen/go"
                android:layout_height="@dimen/gn"
                android:scaleType="centerCrop"
                style="@style/style_round_image"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/el"
                android:layout_weight="1.0"
                android:layout_marginStart="@dimen/el">

                <TextView
                    android:textSize="@dimen/em"
                    android:textColor="@color/e4"
                    android:id="@id/main_group_item_name_tv"
                    android:paddingRight="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>

                <TextView
                    android:textSize="@dimen/gy"
                    android:textColor="@color/dv"
                    android:id="@id/main_group_item_title_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@id/v_divider_line"
            style="@style/PartnerHorizontalDivider"/>
    </RelativeLayout>
</com.boohee.widgets.BooheeRippleLayout>